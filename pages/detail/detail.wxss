page {
  height: 100vh;
  display: flex;
  flex-direction: column;
  overflow: hidden;
}

.scroll-area {
  flex: 1;
  height: 0;
  width: 100%;
}

.detail-page {
  padding-bottom: 160rpx;
  background: #f7f7f7;
  min-height: 100%;
}

.goods-card-wrapper {
  padding: 20rpx;
}

.share-section {
  padding: 0 20rpx;
}

.share-btn {
  width: 100%;
  background: #fff;
  color: #e02e24;
  border: 1rpx solid #e02e24;
  font-size: 30rpx;
  border-radius: 18rpx;
  padding: 18rpx 0;
}

.share-btn:active {
  opacity: 0.9;
}

.detail-content {
  padding: 0 20rpx;
}

.detail-benefit {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
  background: #fff;
  padding: 24rpx;
  border-radius: 20rpx;
}

.benefit-item {
  background: #fff3e0;
  color: #bf5c00;
  border-radius: 18rpx;
  padding: 6rpx 16rpx;
  font-size: 22rpx;
}

.order-link-section {
  margin-top: 20rpx;
  background: #fff;
  padding: 24rpx;
  border-radius: 20rpx;
}

.order-link-title {
  font-size: 28rpx;
  color: #333;
  font-weight: 600;
  margin-bottom: 14rpx;
}

.order-link-text {
  font-size: 24rpx;
  color: #666;
  line-height: 1.5;
  word-break: break-all;
}

.order-link-actions {
  margin-top: 18rpx;
  display: flex;
  justify-content: flex-end;
}

.order-link-btn {
  padding: 14rpx 22rpx;
  border-radius: 999rpx;
  border: 1rpx solid #e02e24;
  color: #e02e24;
  font-size: 26rpx;
  background: #fff;
}

/* Related Section */
.related-section {
  margin-top: 40rpx;
  padding: 0 20rpx;
}

.divider-header {
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 30rpx;
}

.divider-line {
  width: 60rpx;
  height: 2rpx;
  background: #ddd;
}

.divider-text {
  font-size: 28rpx;
  color: #666;
  margin: 0 24rpx;
  font-weight: 500;
}

.related-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.bottom-bar {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  height: 120rpx;
  background: #fff;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 24rpx 0 20rpx;
  box-shadow: 0 -10rpx 30rpx rgba(0, 0, 0, 0.08);
  z-index: 10;
}

.bottom-left {
  display: flex;
  flex-direction: column;
  gap: 6rpx;
}

.bottom-label {
  font-size: 22rpx;
  color: #9a9a9a;
}

.bottom-price {
  font-size: 40rpx;
}

.price-strong {
  color: #d64a43;
  font-weight: 700;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Helvetica, Arial, sans-serif;
}

.bottom-button {
  background: #e02e24;
  color: #fff;
  padding: 20rpx 40rpx;
  border-radius: 40rpx;
  font-size: 30rpx;
  font-weight: 700;
}
