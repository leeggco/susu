page {
  background: #f7f7f7;
  height: 100vh;
}

.profile-container {
  padding: 24rpx;
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

/* User Card */
.user-card {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background: linear-gradient(135deg, #FF9A9E 0%, #FECFEF 99%, #FECFEF 100%);
  padding: 120rpx 32rpx;
  border-radius: 0 0 50% 50% / 0 0 40rpx 40rpx; /* Curved bottom edge for style */
  box-shadow: 0 10rpx 30rpx rgba(255, 154, 158, 0.3);
  min-height: 520rpx;
  width: 100%;
  box-sizing: border-box;
}

.avatar-wrapper {
  width: 140rpx;
  height: 140rpx;
  border-radius: 50%;
  overflow: hidden;
  border: 6rpx solid rgba(255, 255, 255, 0.8);
  box-shadow: 0 8rpx 20rpx rgba(0, 0, 0, 0.1);
  margin-right: 0;
  margin-bottom: 24rpx;
  margin-top: 40rpx;
  flex-shrink: 0;
}

.avatar {
  width: 100%;
  height: 100%;
}

.info-wrapper {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  flex: none;
  width: 100%;
}

.nickname {
  font-size: 40rpx;
  font-weight: 600;
  color: #ffffff;
  margin-bottom: 12rpx;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.1);
}

.user-id {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.9);
  background: rgba(0, 0, 0, 0.1);
  padding: 4rpx 16rpx;
  border-radius: 20rpx;
}

/* Menu List */
.menu-list {
  background: #ffffff;
  border-radius: 24rpx;
  padding: 0 32rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.02);
}

.menu-item {
  display: flex;
  align-items: center;
  padding: 32rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
}

.menu-item:last-child {
  border-bottom: none;
}

.menu-icon-wrapper {
  width: 72rpx;
  height: 72rpx;
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 24rpx;
}

.menu-icon {
  font-size: 36rpx;
}

.menu-content {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.menu-title {
  font-size: 30rpx;
  color: #333333;
  font-weight: 500;
}

.menu-arrow {
  font-size: 28rpx;
  color: #cccccc;
  font-family: monospace;
}
