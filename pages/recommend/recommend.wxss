.container {
  background-color: #f5f5f5;
  height: 100vh;
  display: flex;
  flex-direction: column;
  padding-top: 10rpx;
}

.scroll-area {
  flex: 1;
  height: 0; /* Important for flex growth */
  box-sizing: border-box;
}

.scroll-content {
  padding: 10rpx 20rpx 120rpx 20rpx;
}

.goods-grid {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}

.goods-item {
  width: 48%; /* Fallback */
  width: calc(50% - 10rpx);
  background: #fff;
  border-radius: 16rpx;
  overflow: hidden;
  display: flex;
  flex-direction: column;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.05);
}

.goods-img {
  width: 100%;
  height: 340rpx;
  background: #eee;
  display: block; /* Remove inline spacing */
}

.goods-info {
  padding: 16rpx;
  flex: 1;
  display: flex;
  flex-direction: column;
}

.goods-title {
  font-size: 28rpx;
  color: #333;
  line-height: 1.4;
  height: 2.8em;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  margin-bottom: 12rpx;
}

.goods-tags {
  display: flex;
  align-items: center;
  margin-bottom: 12rpx;
  flex-wrap: wrap;
  gap: 8rpx;
}

.tag-coupon {
  font-size: 20rpx;
  color: #e02e24;
  border: 1px solid #e02e24;
  padding: 2rpx 6rpx;
  border-radius: 4rpx;
}

.tag-sales {
  font-size: 22rpx;
  color: #999;
}

.goods-price-row {
  display: flex;
  align-items: baseline;
  margin-top: auto; /* Push to bottom */
}

.price-wrap {
  color: #e02e24;
  font-weight: bold;
  margin-right: 12rpx;
}

.symbol {
  font-size: 24rpx;
}

.price {
  font-size: 36rpx;
}

.original-price {
  font-size: 22rpx;
  color: #999;
  text-decoration: line-through;
}

.buy-btn {
  margin-top: 16rpx;
  background: #e02e24;
  color: #fff;
  font-size: 24rpx;
  text-align: center;
  padding: 10rpx 0;
  border-radius: 8rpx;
}

.loading-state, .empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding-top: 200rpx;
  color: #999;
  font-size: 28rpx;
  grid-column: span 2; /* Take full width */
}

.loading-spinner {
  width: 40rpx;
  height: 40rpx;
  border: 4rpx solid #e02e24;
  border-top-color: transparent;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 20rpx;
}

.load-more {
  text-align: center;
  padding: 20rpx;
  color: #999;
  font-size: 24rpx;
  grid-column: span 2;
}

@keyframes spin {
  from { transform: rotate(0deg); }
  to { transform: rotate(360deg); }
}
