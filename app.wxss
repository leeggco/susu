/**app.wxss**/
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
}

page {
  background: #f7f7f7;
  color: #2b2b2b;
  font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue", Arial, "PingFang SC", "Hiragino Sans GB", "Microsoft YaHei", sans-serif;
}

.text-ellipsis {
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.price-strong {
  color: #e02e24;
  font-weight: 800;
}

.tag-red {
  background: #e02e24;
  color: #fff;
  padding: 4rpx 12rpx;
  border-radius: 16rpx;
  font-size: 20rpx;
  line-height: 1.2;
}

.tag-yellow {
  background: #ffd161;
  color: #8b3d00;
  padding: 4rpx 12rpx;
  border-radius: 16rpx;
  font-size: 20rpx;
  line-height: 1.2;
}
