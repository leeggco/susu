.urgent-bar {
  display: flex;
  align-items: center;
  background: #fff5f4;
  border: 1rpx solid #ffd1ce;
  padding: 0 16rpx;
  height: 68rpx;
  border-radius: 14rpx;
  margin: 16rpx 20rpx 0;
  overflow: hidden;
  box-sizing: border-box;
}

.urgent-icon {
  margin-right: 12rpx;
  font-size: 28rpx;
  flex-shrink: 0;
}

.urgent-swiper {
  flex: 1;
  height: 100%;
}

.swiper-item {
  display: flex;
  align-items: center;
}

.urgent-item {
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.urgent-text {
  font-size: 24rpx;
  color: #333;
  flex: 1;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  margin-right: 16rpx;
}

.urgent-time {
  font-size: 22rpx;
  color: #999;
  flex-shrink: 0;
}